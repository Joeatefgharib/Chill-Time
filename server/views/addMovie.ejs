<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MSociety</title>
    <style>
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
        }
        .menu {
            position: fixed;
            top: 0;
            right: 0;
            width: 200px;
            height: 100%;
            background-color: black;
            padding-top: 60px;
            transition: 0.5s;
        }
        .menu ul {
            list-style-type: none;
            padding: 0;
        }
        .menu li {
            padding: 15px;
            text-align: center;
        }
        .menu a {
            text-decoration: none;
            color: white;
            font-size: 18px;
            display: block;
            padding: 10px;
            border-bottom: 1px solid #555;
        }
        .form-container {
            margin-right: 220px; /* Adjust as needed based on your menu width */
            padding: 20px;
            text-align: right;
        }
        form {
            direction: rtl;
        }
        label {
            display: block;
            margin-bottom: 8px;
        }
        input,
        textarea,
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }
        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div id="sideMenu" class="menu">
        <ul>
            <li><a href="addmovie">أفلام</a></li>
            <li><a href="addseries">مسلسلات</a></li>
            <li><a href="addactor">ممثلين</a></li>
            <li><a href="adddirector">مخرجين</a></li>
        </ul>
    </div>
    <div class="form-container">
        <h2>أضافة فيلم  </h2>
        <form action="/addmovie" method="post">
            <label for="type">type</label>
            <input type="text" id="type" name="type" required >
            <label for="id">ID</label>
            <input type="text" id="id" name="id" required >
            <label for="title">عنوان الفيلم:</label>
            <input type="text" id="title" name="title" required >
            <br>
            <label for="genre">نوع الفيلم:</label>
            <input type="text" id="genre" name="genre" required >
            <br>
            <label for="year">تاريخ الإصدار:</label>
            <input type="text" id="year" name="year" required >
            <br>
            <label for="description">وصف الفيلم:</label>
            <input type="text" id="description" name="description"  required></input>
            <br>
            <label for="poster" style="padding-top: 14px;">لينك بوستر الفيلم:</label>
            <input type="text" id="poster" name="poster" required>
            <br>
            <label for="movieLink"> لينك الفيلم:</label>
            <input type="text" id="movieLink" name="movieLink" required>
            <br>
            <button type="submit">إضافة الفيلم</button>
        </form>
    </div>
    <script>
        function addCastItem() {
            const castContainer = document.getElementById('cast-container');
            const newCastItem = document.createElement('div');
            newCastItem.classList.add('cast-item');

            const actorLabel = document.createElement('label');
            actorLabel.textContent = 'اسم الممثل:';
            newCastItem.appendChild(actorLabel);

            const actorInput = document.createElement('input');
            actorInput.type = 'text';
            actorInput.name = 'actorNames[]';
            actorInput.required = true;
            newCastItem.appendChild(actorInput);
            newCastItem.appendChild(document.createElement('br'));

            const roleLabel = document.createElement('label');
            roleLabel.textContent = 'دوره في الفيلم:';
            newCastItem.appendChild(roleLabel);

            const roleInput = document.createElement('input');
            roleInput.type = 'text';
            roleInput.name = 'actorRoles[]';
            roleInput.required = true;
            newCastItem.appendChild(roleInput);
            newCastItem.appendChild(document.createElement('br'));

            castContainer.appendChild(newCastItem);
        }
    </script>
</body>
</html>